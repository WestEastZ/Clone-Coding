extends base.pug

block content
  if errorMessage
    span= errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video file
    input(type="file", accept="video/*", required, id="video", name="video")
    input(name="title", placeholder="Title", requried, type="text", maxlength=20)
    input(name="description", placeholder="Description", requried, type="text", minlength=10)
    input(name="hashtags", placeholder="Hashtags, separated comma.", requried, type="text")
    input(type="submit", value="Upload Video")
