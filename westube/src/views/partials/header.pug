header 
  a(href="/").header__logo
    i.fab.fa-youtube
  nav
    ul
      li
        a(href="/search")
          i.fas.fa-search 
      if loggedIn
        li
          a(href="/videos/upload") 
           i.fa-solid.fa-arrow-up
        li 
          a(href="/users/edit")
            i.fa.solid.fa-user-pen
        li
          a(href="/users/logout")
            i.fa.solid.fa-arrow-right-from-bracket
        li
          a(href=`/users/${loggedInUser._id}`)
            if !loggedInUser.avatarUrl
              i.fa.solid.fa-user
            else
              img.header-avatar(src="/" + loggedInUser.avatarUrl)
      else
        li
          a(href="/join").header__btn Join
        li
          a(href="/Login").header__btn Login
      
  